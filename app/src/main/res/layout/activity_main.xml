<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/numberText"
        android:layout_marginTop="72dp"
        android:textSize="100dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button

        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Decrease"
        android:id="@+id/DecButton"
        android:layout_below="@+id/numberText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:onClick="DecButtonClick" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Increase"
        android:id="@+id/IncButton"
        android:layout_alignBottom="@+id/DecButton"
        android:layout_alignParentEnd="true"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:nestedScrollingEnabled="false"
        android:onClick="IncButtonClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App By MINTMYMELO"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/IncButton" />
</RelativeLayout>
